<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="adb-devices.adb_keypair_manager">
      <field name="name">Keypair Manager</field>
      <field name="model">adb.device.keypair</field>
      <field name="arch" type="xml">
        <tree>
          <field name="gpg_key"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="adb-devices.action_keypair_manager_list">
      <field name="name">Keypair Manager</field>
      <field name="res_model">adb.device.keypair</field>
      <field name="view_mode">tree,form</field>
    </record>


