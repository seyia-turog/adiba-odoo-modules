<odoo>
  <data>
  
    <record id="adb_merchants_list_view" model="ir.ui.view">
      <field name="name"> adb.merchants.list.view</field>
      <field name="model">res.partner</field>        
      <field name="mode">primary</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree>
          <field name="external_id" />
          <field name="display_name" />
          <field name="mobile" />
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="adb-general.action_merchant_list">
      <field name="name">Merchants</field>
      <field name="res_model">res.partner</field>
      <field name="search_view_id" ref="adb_entities_search"/>
      <field name="context">{'search_default_merchant_rank':True}</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="view_ids" eval="[
        (5,0,0),
        (0,0,{'view_mode':'tree','view_id':ref('adb_merchants_list_view')}),
        (0,0,{'view_mode':'form','view_id':ref('adb_merchants_view_form')})]"
        />
    </record>
    
  </data>
</odoo>