<odoo>
  <data>
    <record model="ir.ui.view" id="adb-accounts.adb_lookups_bvn">
      <field name="name">Account Lookups</field>
      <field name="model">adb.lookup.bvn</field>
      <field name="arch" type="xml">
        <tree>
          <field name="bvn"/>
          <field name="last_name"/>
          <field name="first_name"/>
          <field name="middle_name"/>
          <field name="registration_date"/>
          <field name="nationality"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="adb-accounts.adb_lookups_bvn_list">
      <field name="name">Account Lookups</field>
      <field name="res_model">adb.lookup.bvn</field>
      <field name="view_mode">tree</field>
    </record>

  </data>
</odoo>