<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="oe_basic_scrum_view_project_task_form_inherit" model="ir.ui.view">
        <field name="name">view.project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description_page']" position="after">
                <page name="scrum_info" string="Scrum Info">
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="x_release_id" domain="[('x_project_id', '=', project_id)]"/>
                        </group>
                        <group>
                            <field name="x_sprint_id" domain="[('x_sprint_release_id', '=', x_release_id)]"/>
                            <field name="x_user_story_id" domain="[('x_sprint_id', '=', x_sprint_id)]"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="oe_basic_scrum_view_project_task_tree" model="ir.ui.view">
        <field name="name">oe.view.project.task.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree string="Tasks" create="0">
                <field name="project_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="x_sprint_id" readonly="1" invisible="1"/>
                <field name="name" readonly="1"/>
                <field name="user_ids" readonly="1"/>
                <field name="description" attrs="{'invisible': [('description', '=', False)]}"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="win_action_tasks" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

</odoo>