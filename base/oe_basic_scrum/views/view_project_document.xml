<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="oe_basic_scrum_view_project_document_tree" model="ir.ui.view">
        <field name="name">oe.view.project.document.tree</field>
        <field name="model">project.document</field>
        <field name="arch" type="xml">
            <tree string="Project Document Tree">
                <field name="x_name"/>
                <field name="x_document_file"/>
            </tree>
        </field>
    </record>
    <record id="oe_basic_scrum_view_project_document_form" model="ir.ui.view">
        <field name="name">oe.view.project.document.form</field>
        <field name="model">project.document</field>
        <field name="arch" type="xml">
            <form string="Project Document Form">
                <sheet>
                    <group>
                        <group>
                            <field name="x_name"/>
                        </group>
                        <group>
                            <field name="x_project_id"/>
                            <field name="x_document_file"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="win_action_project_document" model="ir.actions.act_window">
        <field name="name">Project Document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
</odoo>