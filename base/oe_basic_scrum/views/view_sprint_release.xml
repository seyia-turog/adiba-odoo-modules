<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="oe_view_sprint_release_tree" model="ir.ui.view">
        <field name="name">view.sprint.release.tree</field>
        <field name="model">sprint.release</field>
        <field name="arch" type="xml">
            <tree string="Spint Release Tree" multi_edit="1">
                <field name="x_name" string="Release"/>
                <field name="x_sprint_text" string="Sprint" widget="html"/>
                <field name="x_sprint_start_date"/>
                <field name="x_status"/>
                <field name="x_sprint_ids" invisible="1"/>
                <field name="x_project_id"/>
                <button type="object" class="btn btn-primary" string="SPRINTS" name="open_win_action_sprint"/>
                <button type="object" class="btn btn-warning" string="STORIES" name="open_story"/>
                <button type="object" class="btn btn-success" string="TASKS" name="open_win_action_task"/>
            </tree>
        </field>
    </record>
    <record id="oe_view_sprint_release_form" model="ir.ui.view">
        <field name="name">view.sprint.release.form</field>
        <field name="model">sprint.release</field>
        <field name="arch" type="xml">
            <form string="Sprint Release Form">
                <header>
                    <field widget="statusbar" options="{'clickable': 1}" name="x_status"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="x_name" required="1" string="Release Name"/>
                            <field name="x_project_id" required="1"/>
                        </group>
                        <group>
                            <field name="x_sprint_start_date"/>
                            <field name="x_sprint_end_date" string="Expected End Date"/>
                            <field name="x_number_of_sprint" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="release_objective" string="Objective">
                            <field name="x_sprint_objective" widget="html" placeholder="Release objective"/>
                        </page>
                        <page name="sprint" string="Sprint">
                            <field name="x_sprint_ids" context="{'default_x_project_id': x_project_id}">
                                <tree>
                                    <field name="x_name" string="Sprint Name"/>
                                    <field name="x_sprint_objective" widget="html"/>
                                    <field name="x_task_text" widget="html"/>
                                    <field name="x_status" string="Sprint Status"/>
                                    <field name="x_project_id" optional="hide"/>
                                    <field name="x_sprint_release_id" optional="hide"/>
                                </tree>
                                <form>
                                    <header>
                                        <field widget="statusbar" options="{'clickable': 1}" name="x_status"/>
                                    </header>
                                    <sheet>
                                        <div class="oe_title" attrs="{'invisible': [('x_name', '=', False)]}">
                                            <h1>
                                                <field name="x_name" readonly="1" force_save="1"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="x_start_date"/>
                                            </group>
                                            <group>
                                                <field name="x_end_date"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page name="objective" string="Objective">
                                                <field name="x_sprint_objective" widget="html"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page name="user_stories" string="User Stories">
                            <field name="x_user_story_ids" context="{'default_x_project_id':x_project_id}">
                                <tree>
                                    <field name="x_story_id"/>
                                    <field name="x_user_story" widget="html"/>
                                    <field name="x_task_ids"/>
                                    <field name="x_estimate_hour"/>
                                    <field name="x_priority"/>
                                    <field name="x_project_id" optional="hide"/>
                                    <field name="x_sprint_release_id" optional="hide"/>
                                    <field name="x_sprint_id" optional="hide"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="x_priority"/>
                                            </group>
                                            <group>
                                                <field name="x_estimate_hour"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="User Story" name="user_story">
                                                <field name="x_user_story" widget="html"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page name="task_ids" string="Tasks">
                            <field name="x_task_ids"
                                   context="{'default_project_id':x_project_id, 'default_x_release_id': active_id}">
                                <tree>
                                    <field name="name" string="Task Name"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="stage_id"/>
                                    <field name="project_id" optional="hide"/>
                                    <field name="x_release_id" optional="hide"/>
                                    <field name="x_sprint_id" optional="hide"/>
                                    <field name="x_user_story_id" optional="hide"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                            </group>
                                            <group>
                                                <field name="user_ids" widget="many2many_tags"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="project_id" invisible="1"/>
                                                <field name="stage_id" invisible="1"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page name="description" string="Description">
                                                <field name="description"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="oe_view_sprint_release_search" model="ir.ui.view">
        <field name="name">view.sprint.release.search</field>
        <field name="model">sprint.release</field>
        <field name="arch" type="xml">
            <search string="Search Project">
                <searchpanel>
                    <field name="x_project_id" icon="fa-file" enable_counters="1"/>
                    <field name="x_status" icon="fa-file" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="win_action_sprint_release" model="ir.actions.act_window">
        <field name="name">Release</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sprint.release</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

</odoo>