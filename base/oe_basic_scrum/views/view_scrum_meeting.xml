<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="oe_view_scrum_meeting_tree" model="ir.ui.view">
        <field name="name">view.scrum.meeting.tree</field>
        <field name="model">scrum.meeting</field>
        <field name="arch" type="xml">
            <tree string="Scrum Meeting">
                <field name="x_name"/>
                <field name="x_project_id"/>
                <field name="x_sprint_release_id"/>
                <field name="x_meeting_start_date"/>
                <field name="x_duration"/>
                <field name="x_attendee_text" string="Attendees" widget="html"/>
            </tree>
        </field>
    </record>
    <record id="oe_view_scrum_meeting_form" model="ir.ui.view">
        <field name="name">view.scrum.meeting.form</field>
        <field name="model">scrum.meeting</field>
        <field name="arch" type="xml">
            <form string="Scrum Meeting Form">
                <sheet>
                     <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-folder-open" type="object"
                                name="open_scrum_report">
                            <span>Scrum Report</span>
                        </button>
                    </div>
                    <group>
                        <group string="Meeting Info">
                            <field name="x_name" required="True"/>
                            <field name="x_attendee_ids" widget="many2many_tags" required="True"/>
                            <field name="x_meeting_start_date" required="True"/>
                            <field name="x_duration" required="True"/>
                            <field name="x_description"/>
                            <field name="x_location"/>
                        </group>
                        <group string="Sprint Review">
                            <field name="x_project_id" required="True"/>
                            <field name="x_sprint_release_id" required="True" domain="[('x_project_id', '=', x_project_id)]"/>
                        </group>
                    </group>
                    <group string="Meeting Note">
                        <field name="x_happen_during_meeting"/>
                        <field name="x_was_done_last_meeting"/>
                        <field name="x_plan_until_next_meeting"/>
                        <field name="x_something_blocking"/>
                    </group>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="win_action_scrum_meeting" model="ir.actions.act_window">
        <field name="name">Scrum Meeting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scrum.meeting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
</odoo>