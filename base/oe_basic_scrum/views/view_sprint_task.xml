<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="oe_view_sprint_task_tree" model="ir.ui.view">
        <field name="name">view.sprint.task.tree</field>
        <field name="model">sprint.task</field>
        <field name="arch" type="xml">
            <tree string="Sprint Task" multi_edit="1">
                <field name="x_name"/>
                <field name="x_task_text" widget="html" optional="show"/>
                <field name="x_status"/>
                <field name="x_project_id" optional="hide"/>
                <field name="x_sprint_release_id" domain="[('x_project_id', '=', x_project_id)]"/>
                <button type="object" class="btn btn-success" string="STORIES" name="open_story"/>
                <button type="object" class="btn btn-primary" string="TASKS" name="open_task"/>
            </tree>
        </field>
    </record>
    <record id="oe_view_sprint_task_form" model="ir.ui.view">
        <field name="name">view.sprint.task.form</field>
        <field name="model">sprint.task</field>
        <field name="arch" type="xml">
            <form string="Sprint Task">
                <header>
                    <field widget="statusbar" options="{'clickable': 1}" name="x_status"/>
                </header>
                <sheet>
                    <div class="oe_title" attrs="{'invisible': [('x_name', '=', False)]}">
                        <h1>
                            <field name="x_name" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="x_project_id"/>
                            <field name="x_sprint_release_id" string="Release"
                                   domain="[('x_project_id', '=', x_project_id)]"/>
                        </group>
                        <group>
                            <field name="x_start_date"/>
                            <field name="x_end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="sprint_objective" string="Objective">
                            <field name="x_sprint_objective" widget="html"
                                   placeholder="Write the sprint objective here..."/>
                        </page>
                        <page name="user_stories" string="User Stories">
                            <field name="x_user_story_ids"
                                   context="{'default_x_project_id':x_project_id, 'default_x_sprint_release_id':x_sprint_release_id}">
                                <tree>
                                    <field name="x_story_id"/>
                                    <field name="x_user_story" widget="html"/>
                                    <field name="x_task_ids"/>
                                    <field name="x_estimate_hour"/>
                                    <field name="x_priority"/>
                                    <field name="x_project_id" optional="hide"/>
                                    <field name="x_sprint_release_id" optional="hide"/>
                                    <field name="x_sprint_id" optional="hide"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="x_priority"/>
                                            </group>
                                            <group>
                                                <field name="x_estimate_hour"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="User Story" name="user_story">
                                                <field name="x_user_story" widget="html"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page name="task_ids" string="Tasks">
                            <field name="x_task_ids"
                                   context="{'default_project_id':x_project_id, 'default_x_release_id':x_sprint_release_id}">
                                <tree>
                                    <field name="name" string="Task Name"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="stage_id"/>
                                    <field name="project_id" optional="hide"/>
                                    <field name="x_release_id" optional="hide"/>
                                    <field name="x_sprint_id" optional="hide"/>
                                    <field name="x_user_story_id" optional="hide"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                            </group>
                                            <group>
                                                <field name="user_ids" widget="many2many_tags"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="project_id" invisible="1"/>
                                                <field name="stage_id" invisible="1"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page name="description" string="Description">
                                                <field name="description"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page name="sprint_review" string="Sprint Review">
                            <group>
                                <field name="x_task_to_improve_ids" string="Task To Improve" widget="many2many_tags"/>
                                <field name="x_sprint_review" widget="html" placeholder="Write your review here..."/>
                            </group>

                        </page>
                        <page name="retrospective" string="Retrospective">
                            <field name="x_retrospective" widget="html" placeholder="Write your retrospective here..."/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="oe_view_sprint_task_search" model="ir.ui.view">
        <field name="name">view.sprint.task.search</field>
        <field name="model">sprint.task</field>
        <field name="arch" type="xml">
            <search string="Search Sprint Task">
                <field name="x_sprint_release_id"/>
                <group expand="0" string="Group By">
                    <filter string="Release" name="release" context="{'group_by': 'x_sprint_release_id'}"/>
                </group>
                <searchpanel>
                    <field name="x_sprint_release_id" icon="fa-file" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="win_action_sprint_task" model="ir.actions.act_window">
        <field name="name">Sprint Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sprint.task</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>
</odoo>